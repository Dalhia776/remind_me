<div class="content-wrapper">
  <div class="container">
    <h4 class="page-head-line">My Reminder</h4>
      <div class="col-xs-12">
        <p>
          <strong>Name:</strong>
          <%= @event.name %>
        </p>
        <p>
          <strong>Description:</strong>
          <%= @event.description %>
        </p>
        <p>
          <strong>Reminder type:</strong>
          <%= @event.reminder_type %>
        </p>
        <p>
          <strong>Date due:</strong>
          <%= @event.date_time %>
        </p>
        <p>
          <strong>User:</strong>
          <%= @event.user.full_name %>
        </p>


      </div>
      <% if can? :update, Event %>
      <%= link_to 'Edit', edit_event_path(@event) %>
      <% end %> |
      <%= link_to 'Back', events_path %>
  </div>
</div>

      <!--    Striped Rows Table  -->
      <div class="content-wrapper">
        <div class="container">
          <h4 class="page-head-line">Remind Me</h4>
          <div class="row">
            <div class="col-md-12">
              <% flash.each do |name,msg| %>
                <%= content_tag :div, class: "alert alert-#{ name == :error ? "danger" : "success"} alert-dismissable", role: "alert" do %>
                  <%= msg %>
                <% end %>
              <% end %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12">
              <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                  <div class="panel-heading">
                    My Current Reminders
                  </div>
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>Client Name</th>
                      <th>Description</th>
                      <th>Date & Time Due</th>
                      <th>Reminder Type</th>
                      <th>Details</th>
                      <th>Edit</th>
                      <th>Cancel</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @events.each do |event| %>
                      <tr>
                        <td><%= event.id %></td>
                        <td><%= event.name %></td>
                        <td><%= event.description %></td>
                        <td><%= event.date_time %></td>
                        <td><%= event.reminder_type %></td>
                        <td><%= link_to 'Show', event_path(event), class: "btn btn-xs btn-info" %></td>
                        <td><%= link_to 'Edit', edit_event_path(event), class: "btn btn-xs btn-primary" %></td>
                        <td><%= link_to 'Delete', event, class: "btn btn-xs btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
                      </tr>
                    <% end %>
                    <%= paginate @events %>
                    <%= page_entries_info @events %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

          <hr />

        </div>
      </div>

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
      <div class="modal-dialog">
        <div class="modal-content">
        </div>
      </div>
    </div>
